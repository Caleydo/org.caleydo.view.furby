<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="org.caleydo.core.views"
            class="org.caleydo.view.bicluster.RcpGLBiClusterView"
            icon="resources/icons/icon.png"
            id="org.caleydo.view.bicluster"
            name="Furby">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.caleydo.menu.view"
               label="View">
            <menu
                  id="org.caleydo.menu.view.experimental"
                  label="Experimental">
               <command
                     commandId="org.caleydo.view.bicluster.command.opentemplate"
                     icon="resources/icons/icon.png"
                     style="push">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="org.caleydo.core.isReleaseState">
                        <equals
                              value="releaseVersion">
                        </equals>
                     </with>
                  </visibleWhen>
               </command>
            </menu>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.caleydo.view.bicluster.OpenViewHandler"
            id="org.caleydo.view.bicluster.command.opentemplate"
            name="Furby">
      </command>
   </extension>
   <extension
         point="org.caleydo.view.ViewCategory">
      <ViewCategory
            isDataView="false"
            isReleaseView="false"
            viewID="org.caleydo.view.bicluster">
      </ViewCategory>
   </extension>
   <extension
         id="packageGenerator"
         name="PackageGenerator"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="org.caleydo.view.bicluster.PackageGenerator">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.caleydo.view.bicluster.internal.prefs.MyPreferences">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.caleydo.core.gui.preferences.views"
            class="org.caleydo.view.bicluster.internal.prefs.MyPreferencePage"
            id="org.caleydo.view.bicluster"
            name="Bicluster">
      </page>
   </extension>
   <extension
         point="org.caleydo.core.StartupAddon">
      <addon
            class="org.caleydo.view.bicluster.internal.loading.BiClusterStartupAddon"
            name="Load BiCluster Result">
      </addon>
   </extension>
</plugin>
